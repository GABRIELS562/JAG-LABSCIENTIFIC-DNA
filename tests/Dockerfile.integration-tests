# Dockerfile for Integration Test Runner
# This container runs the integration test suite

FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apk add --no-cache \
    curl \
    bash \
    jq \
    postgresql-client \
    && rm -rf /var/cache/apk/*

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy test files
COPY . ./

# Create necessary directories
RUN mkdir -p reports coverage pacts logs

# Set permissions
RUN chmod +x ./scripts/*.sh || true

# Create non-root user
RUN addgroup -g 1001 -S testrunner && \
    adduser -S testrunner -u 1001 -G testrunner

# Change ownership of app directory
RUN chown -R testrunner:testrunner /app

# Switch to non-root user
USER testrunner

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD node -e "console.log('Integration test runner is ready')" || exit 1

# Default command
CMD ["npm", "run", "test"]

# Labels for metadata
LABEL maintainer="DevOps Team <devops@labscientific.com>"
LABEL version="1.0.0"
LABEL description="Integration test runner for LIMS application"
LABEL org.opencontainers.image.source="https://github.com/your-org/labscientific-lims"
LABEL org.opencontainers.image.documentation="https://github.com/your-org/labscientific-lims/blob/main/tests/README.md"
LABEL org.opencontainers.image.licenses="MIT"