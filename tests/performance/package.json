{
  "name": "lims-performance-tests",
  "version": "1.0.0",
  "description": "Performance testing suite for LIMS application",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:all",
    "test:all": "npm run test:artillery && npm run test:k6 && npm run test:lighthouse",
    "test:artillery": "artillery run artillery.yml --output artillery-results.json",
    "test:artillery:quick": "artillery quick --count 10 --num 5 http://localhost:3000/api/health",
    "test:k6": "k6 run k6-load-test.js",
    "test:k6:smoke": "k6 run --vus 1 --duration 30s k6-load-test.js",
    "test:k6:load": "k6 run --vus 10 --duration 5m k6-load-test.js",
    "test:k6:stress": "k6 run --vus 20 --duration 10m k6-load-test.js",
    "test:k6:spike": "k6 run --vus 100 --duration 1m k6-load-test.js",
    "test:lighthouse": "node lighthouse-performance.js",
    "test:jmeter": "jmeter -n -t jmeter-test-plan.jmx -l jmeter-results.jtl -e -o jmeter-dashboard",
    "test:jmeter:gui": "jmeter -t jmeter-test-plan.jmx",
    "benchmark": "npm run benchmark:api && npm run benchmark:database",
    "benchmark:api": "autocannon -c 100 -d 60 -p 10 http://localhost:3000/api/health",
    "benchmark:database": "node benchmark-database.js",
    "monitor": "npm run monitor:start",
    "monitor:start": "node monitor-performance.js",
    "monitor:stop": "pkill -f monitor-performance.js",
    "report": "npm run report:generate",
    "report:generate": "node generate-performance-report.js",
    "report:html": "artillery report artillery-results.json --output artillery-report.html",
    "cleanup": "npm run cleanup:results",
    "cleanup:results": "rm -rf artillery-results.json k6-load-test-results.html jmeter-results.jtl jmeter-dashboard lighthouse-results",
    "install:tools": "npm run install:artillery && npm run install:k6 && npm run install:lighthouse",
    "install:artillery": "npm install -g artillery",
    "install:k6": "brew install k6 || echo 'Please install k6 manually'",
    "install:lighthouse": "npm install -g lighthouse",
    "install:jmeter": "echo 'Please install JMeter manually from https://jmeter.apache.org/'",
    "validate": "npm run validate:config",
    "validate:config": "node validate-config.js"
  },
  "keywords": [
    "performance",
    "testing",
    "load",
    "stress",
    "benchmark",
    "lims",
    "artillery",
    "k6",
    "lighthouse",
    "jmeter"
  ],
  "author": "LIMS Development Team",
  "license": "MIT",
  "devDependencies": {
    "artillery": "^2.0.0",
    "autocannon": "^7.12.0",
    "chrome-launcher": "^0.15.2",
    "lighthouse": "^10.4.0",
    "clinic": "^12.0.0",
    "0x": "^5.5.0",
    "loadtest": "^7.0.0",
    "siege": "^1.0.0",
    "@k6-utils/utils": "^1.0.0",
    "k6": "^0.1.0",
    "performance-now": "^2.1.0",
    "pidusage": "^3.0.2",
    "systeminformation": "^5.21.7",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7",
    "csv-parse": "^5.4.0",
    "json2csv": "^6.1.0",
    "chart.js": "^4.4.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "async": "^3.2.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/labscientific-lims.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/labscientific-lims/issues"
  },
  "homepage": "https://github.com/your-org/labscientific-lims#readme",
  "directories": {
    "test": "tests"
  },
  "config": {
    "artillery": {
      "target": "http://localhost:3000",
      "phases": [
        {
          "duration": 60,
          "arrivalRate": 10
        }
      ]
    },
    "k6": {
      "vus": 10,
      "duration": "5m"
    },
    "lighthouse": {
      "port": 9222,
      "chromeFlags": [
        "--headless",
        "--disable-gpu",
        "--no-sandbox"
      ]
    }
  },
  "performance": {
    "targets": {
      "response_time_95th": 2000,
      "response_time_99th": 5000,
      "error_rate": 0.01,
      "throughput": 100
    },
    "environments": {
      "development": {
        "target": "http://localhost:3000",
        "load": "light"
      },
      "staging": {
        "target": "https://staging.lims.example.com",
        "load": "medium"
      },
      "production": {
        "target": "https://lims.example.com",
        "load": "heavy"
      }
    }
  }
}