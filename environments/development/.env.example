# Development Environment Configuration
# Copy this file to .env and customize for your local development setup

# Application Settings
NODE_ENV=development
PORT=3000
API_VERSION=v1
LOG_LEVEL=debug
ENABLE_DEBUG=true
HOT_RELOAD=true

# Database Configuration
DATABASE_URL=postgresql://lims_user:lims_password@postgres:5432/lims_dev
DATABASE_POOL_SIZE=10
DATABASE_SSL=false
DATABASE_LOGGING=true

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_TTL=3600
REDIS_MAX_CONNECTIONS=10

# Security Settings
JWT_SECRET=dev-jwt-secret-change-in-production
ENCRYPTION_KEY=dev-encryption-key-32-characters
SESSION_SECRET=dev-session-secret-change-in-production
CORS_ORIGIN=http://localhost:3000

# Cloud Provider Configuration (for future deployment)
CLOUD_PROVIDER=local
CLOUD_REGION=us-east-1
ENVIRONMENT=development
INSTANCE_ID=local-dev
DEPLOYMENT_VERSION=dev

# Feature Flags for Cloud Services
USE_CLOUD_STORAGE=false
USE_CLOUD_SECRETS=false
USE_CLOUD_MONITORING=false
USE_CLOUD_LOGGING=false
USE_CLOUD_DATABASE=false
USE_CLOUD_CACHE=false

# AWS Configuration (for future use)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=lims-dev-storage
AWS_RDS_ENDPOINT=
AWS_ELASTICACHE_ENDPOINT=
AWS_SECRETS_MANAGER_ENABLED=false

# Azure Configuration (for future use)
AZURE_REGION=eastus
AZURE_SUBSCRIPTION_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=
AZURE_STORAGE_ACCOUNT=limsdevstorage
AZURE_DATABASE_SERVER=
AZURE_REDIS_CACHE=
AZURE_KEY_VAULT_ENABLED=false

# Google Cloud Configuration (for future use)
GOOGLE_CLOUD_PROJECT=lims-dev
GOOGLE_CLOUD_REGION=us-east1
GOOGLE_APPLICATION_CREDENTIALS=
GOOGLE_CLOUD_STORAGE_BUCKET=lims-dev-storage
GOOGLE_CLOUD_SQL_INSTANCE=
GOOGLE_CLOUD_REDIS_INSTANCE=
GOOGLE_SECRET_MANAGER_ENABLED=false

# Monitoring and Observability
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
JAEGER_ENABLED=true
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_ENDPOINT=/health

# External Service Integration
OSIRIS_API_URL=https://api.osiris-dev.example.com
OSIRIS_API_KEY=dev-osiris-api-key
GENOMICS_API_URL=https://genomics-api-dev.example.com
GENOMICS_API_KEY=dev-genomics-api-key

# Email Configuration
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@lims-dev.local

# Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=/app/storage
STORAGE_MAX_FILE_SIZE=10MB
STORAGE_ALLOWED_TYPES=pdf,jpg,jpeg,png,csv,xlsx

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_STORAGE_TYPE=local
BACKUP_STORAGE_PATH=/backup

# Development Tools
WEBPACK_DEV_SERVER=true
BROWSER_SYNC_ENABLED=true
LIVE_RELOAD_ENABLED=true
SOURCE_MAPS_ENABLED=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://lims_user:lims_password@postgres:5432/lims_test
TEST_REDIS_URL=redis://redis:6379
TEST_TIMEOUT=30000
TEST_PARALLEL=true
TEST_COVERAGE_ENABLED=true

# Performance Settings
MAX_REQUEST_SIZE=50mb
REQUEST_TIMEOUT=30000
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=1000

# Feature Flags
FEATURE_GENETIC_ANALYSIS=true
FEATURE_ADVANCED_REPORTING=true
FEATURE_SAMPLE_TRACKING=true
FEATURE_USER_MANAGEMENT=true
FEATURE_AUDIT_LOGGING=true
FEATURE_MULTI_TENANCY=false
FEATURE_REAL_TIME_UPDATES=true

# Development Debugging
DEBUG_SQL_QUERIES=true
DEBUG_REDIS_COMMANDS=false
DEBUG_HTTP_REQUESTS=true
DEBUG_PERFORMANCE=true
DEBUG_MEMORY_USAGE=false

# Docker Compose Profiles
COMPOSE_PROFILES=monitoring,tracing,storage,mail,proxy

# Build Configuration
BUILD_TARGET=development
BUILD_OPTIMIZATION=false
BUILD_SOURCE_MAPS=true
BUILD_BUNDLE_ANALYZER=false

# Kubernetes Development (for local k8s testing)
KUBERNETES_NAMESPACE=lims-dev
KUBERNETES_CONTEXT=docker-desktop
KUBERNETES_INGRESS_CLASS=nginx
KUBERNETES_STORAGE_CLASS=hostpath

# Migration Settings
AUTO_MIGRATE=true
MIGRATION_TIMEOUT=60000
SEED_DATABASE=true
SEED_SAMPLE_DATA=true

# Logging Configuration
LOG_FORMAT=dev
LOG_COLORS=true
LOG_TIMESTAMP=true
LOG_REQUESTS=true
LOG_ERRORS=true
LOG_PERFORMANCE=true

# Security Development Settings
SECURITY_HELMET_ENABLED=true
SECURITY_CORS_ENABLED=true
SECURITY_RATE_LIMITING_ENABLED=false
SECURITY_CSRF_ENABLED=false
SECURITY_CONTENT_SECURITY_POLICY=false

# Development URLs
DEV_FRONTEND_URL=http://localhost:3000
DEV_BACKEND_URL=http://localhost:3000
DEV_ADMIN_URL=http://localhost:3000/admin
DEV_DOCS_URL=http://localhost:3000/docs

# Cloud-Ready Health Checks
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true
HEALTH_CHECK_EXTERNAL_APIS=true
HEALTH_CHECK_STORAGE=true
HEALTH_CHECK_DEPENDENCIES=true

# Resource Limits (for cloud preparation)
MAX_MEMORY_USAGE=1024
MAX_CPU_USAGE=1000
MAX_DISK_USAGE=10240
MAX_CONCURRENT_REQUESTS=100
MAX_DATABASE_CONNECTIONS=20